<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowserActivity">

    <FrameLayout
        android:id="@+id/page_control"
        android:layout_width="646dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/page_control_frag"
            android:name="edu.temple.webbrowser.PageControlFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/page_viewer"
        android:layout_width="381dp"
        android:layout_height="340dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/browser_control"
        app:layout_constraintTop_toBottomOf="@+id/page_control">

        <fragment
            android:id="@+id/view_frag"
            android:name="edu.temple.webbrowser.PageViewerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/browser_control"
        android:layout_width="342dp"
        android:layout_height="115dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_control">

        <fragment
            android:id="@+id/browser_control_frag"
            android:name="edu.temple.webbrowser.BrowserControlFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/page_list"
        android:layout_width="344dp"
        android:layout_height="218dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browser_control">

        <fragment
            android:id="@+id/page_list_frag"
            android:name="edu.temple.webbrowser.PageListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>